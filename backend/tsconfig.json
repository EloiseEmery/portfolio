{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["node", "express", "cors", "node-fetch"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
